@page "/auth/{action}"

<PageTitle>@action - StudentTimeTracker</PageTitle>

@if (string.Equals(action, "login", StringComparison.OrdinalIgnoreCase))
{
    <h3>Login Page</h3>
    <p>Please enter your credentials to log in.</p>
}
else if (string.Equals(action, "register", StringComparison.OrdinalIgnoreCase))
{
    <h3>Register Page</h3>
    <p>Please fill out the form to create a new account.</p>
}
else
{
    <h3>Unknown Action</h3>
    <p>The action '@action' is not recognized. Please use 'login' or 'register'.</p>
}

@code {
    [Parameter]
    public string action { get; set; } = string.Empty;
}