<div class="container py-3">
    <div class="row mb-3">
        <div class="col-12">
            <h1 class="h4 mb-1">Messaging</h1>
            <p class="text-muted mb-0">A simple chat UI (visual only — no functionality)</p>
        </div>
    </div>

    <div class="row g-3">
        <!-- Left column: contacts -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <div class="mb-2">
                        <input class="form-control" placeholder="Search users..." aria-label="Search users" />
                    </div>

                    <ul class="list-group list-group-flush mt-2">
                        <li class="list-group-item d-flex align-items-center">
                            <div class="avatar bg-primary text-white me-2">U1</div>
                            <div class="flex-grow-1">
                                <div class="fw-semibold">Us01</div>
                                <div class="small text-muted">Last message preview…</div>
                            </div>
                            <span class="badge bg-secondary rounded-pill">2</span>
                        </li>

                        <li class="list-group-item d-flex align-items-center">
                            <div class="avatar bg-secondary text-white me-2">U2</div>
                            <div class="flex-grow-1">
                                <div class="fw-semibold">Us02</div>
                                <div class="small text-muted">Available</div>
                            </div>
                        </li>

                        <li class="list-group-item d-flex align-items-center">
                            <div class="avatar bg-success text-white me-2">U3</div>
                            <div class="flex-grow-1">
                                <div class="fw-semibold">Us03</div>
                                <div class="small text-muted">On a call</div>
                            </div>
                            <span class="text-muted small">10:12</span>
                        </li>

                        <li class="list-group-item d-flex align-items-center">
                            <div class="avatar bg-warning text-dark me-2">U4</div>
                            <div class="flex-grow-1">
                                <div class="fw-semibold">Us04</div>
                                <div class="small text-muted">Away</div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Right column: chat area -->
        <div class="col-md-8">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-0">Select a conversation</h5>
                        <small class="text-muted">Conversation details appear here</small>
                    </div>
                    <div class="text-end">
                        <button class="btn btn-sm btn-outline-secondary" disabled>Options</button>
                    </div>
                </div>

                <div class="card-body d-flex flex-column p-3">
                    <div class="messages flex-grow-1 overflow-auto mb-3">
                        <div class="d-flex mb-3">
                            <div class="avatar bg-secondary text-white me-2">U1</div>
                            <div class="bg-light p-2 rounded message-bubble">
                                <div>Hello — this is a sample incoming message.</div>
                                <div class="small text-muted mt-1">10:01 AM</div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end mb-3">
                            <div class="bg-primary text-white p-2 rounded message-bubble">
                                <div>Thanks — this is a sample outgoing message.</div>
                                <div class="small text-white-50 mt-1">10:02 AM</div>
                            </div>
                        </div>

                        <div class="d-flex mb-3">
                            <div class="avatar bg-secondary text-white me-2">U1</div>
                            <div class="bg-light p-2 rounded message-bubble">
                                <div>Another incoming message to show wrapping and layout.</div>
                                <div class="small text-muted mt-1">10:03 AM</div>
                            </div>
                        </div>

                        <div class="text-center text-muted small mt-3">End of conversation preview</div>
                    </div>

                    <div>
                        <div class="input-group">
                            <textarea class="form-control" rows="2" placeholder="Type a message..." disabled></textarea>
                            <button class="btn btn-primary" type="button" disabled>Send</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar {
        width: 40px;
        height: 40px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 6px;
        font-weight: 600;
    }

    .messages {
        max-height: 60vh;
    }

    .message-bubble {
        max-width: 75%;
        word-wrap: break-word;
    }

    @@media (max-width: 767.98px) {
        .avatar { width: 34px; height: 34px; font-size: 0.85rem; }
        .messages { max-height: 50vh; }
    }
</style>
